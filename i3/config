# <-TakYzGG I3 Config->

# <-Inicio autimatico->
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id setxkbmap latam
exec --no-startup-id polybar
exec --no-startup-id ~/.fehbg

# <-Atajos de teclado->

# Definir programas
set $alt			Mod1
set $mod			Mod4
set $rofi			rofi -show drun -b
set $rofid 			rofi -show run
set $music			cmus
set $browser 		firefox
set $terminal 		lxterminal
set $file_explorer	vifm ~/

# Programas
bindsym $mod+Return 	exec $terminal
bindsym $mod+F1			exec $rofi
bindsym $alt+F1			exec $rofid
bindsym $mod+w			exec $browser
bindsym $mod+e			exec $terminal -e $file_explorer
bindsym $mod+m			exec $terminal -e $music

# Scripts
bindsym $mod+F2 		exec /usr/local/bin/Screenshot
bindsym $alt+F2			exec /usr/local/bin/Wifi
bindsym $mod+F3			exec /usr/local/bin/PDF
bindsym $alt+F3			exec /usr/local/bin/Bluetooth
bindsym $mod+F11		exec /usr/local/bin/Wallpaper
bindsym $alt+F11		exec /usr/local/bin/I3-Themes
bindsym $mod+F12 		exec /usr/local/bin/PowerMenu
bindsym $alt+F12 		exec /usr/local/bin/Teclado

# Control de brillo
bindsym XF86MonBrightnessDown exec brightnessctl set 1%- && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessUp exec brightnessctl set +1% && pkill -RTMIN+10 i3blocks

# Control de volumen PulseAudio
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute && pkill -RTMIN+10 i3blocks

# Cambiar de ventana
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Mover ventanas
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Cerrar una ventana
bindsym $mod+Shift+q kill

# Abrir una ventana vertical
bindsym $mod+Tab split v

# Abrir una ventana horizontal
bindsym $mod+Shift+Tab split h

# Entar en pantalla completa
bindsym $mod+Shift+f fullscreen toggle

# Hacer una ventana flotante
bindsym $mod+Shift+space floating toggle

# Cambiar entre ventanas tiling / floating
bindsym $mod+space focus mode_toggle

# Rescalar ventanas
mode "Rescalar" {

        # Rescalar ventanas
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize shrink height 1 px or 1 ppt
        bindsym k resize grow height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        # Volver al modo normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "Rescalar"

# Cambiar de escritorio
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# Mover ventanas de un escritorio a otro
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# Recargar I3
bindsym $mod+Shift+r restart

# Salir de I3
bindsym $mod+Shift+F11 exec "i3-msg exit"

# <-Escritorios->

# Nombre de escritorios
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "10"

# Programas con escritorio definido
for_window [class="Firefox"] move container to workspace $ws3
for_window [class="Discord"] move container to workspace $ws10
for_window [class="TelegramDesktop"] move container to workspace $ws10

# <-Personalizacion->

# Fuente
font pango:UbuntuMono Nerd Font Mono Bold 10

# Gaps
smart_gaps on
gaps inner 2
gaps outer 2

# Barra de titulo
for_window [class="^.*"] border pixel 2

# Tema
include $HOME/.config/i3/theme.conf
